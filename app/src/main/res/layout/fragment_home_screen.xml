<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,ContentDescription">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Good morning"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thien Duc"
        android:textSize="18sp"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="@id/greeting"
        app:layout_constraintTop_toBottomOf="@id/greeting"/>

    <ImageButton
        android:id="@+id/cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_icon"
        app:layout_constraintBottom_toBottomOf="@id/name_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toEndOf="@id/greeting"
        app:layout_constraintTop_toTopOf="@id/greeting"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_icon"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="@id/cart_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toEndOf="@id/cart_button"
        app:layout_constraintTop_toTopOf="@id/cart_button"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="122dp"
        android:background="@drawable/fifteen_dp_rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        tools:ignore="TextSizeCheck">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Loyalty card"
            android:textColor="@color/bright_grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139" />

        <TextView
            android:id="@+id/loyalty_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="4 / 8"
            android:textColor="@color/bright_grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="278dp"
            android:layout_height="60dp"
            android:background="@drawable/fifteen_dp_rounded_rectangle"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.721">

            <ImageView
                android:id="@+id/loyalty_cup_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/loyalty_cup_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_1"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_1" />

            <ImageView
                android:id="@+id/loyalty_cup_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_2"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_2" />

            <ImageView
                android:id="@+id/loyalty_cup_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_3"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_3" />

            <ImageView
                android:id="@+id/loyalty_cup_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_4"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_4"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/loyalty_cup_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_5"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_5"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/loyalty_cup_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_6"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_6"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/loyalty_cup_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/not_loyalty_cup"
                app:layout_constraintStart_toEndOf="@id/loyalty_cup_7"
                app:layout_constraintTop_toTopOf="@id/loyalty_cup_7"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="@drawable/top_corner_rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your coffee"
            android:textSize="16sp"
            android:textColor="@color/bright_grey"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.048"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/americano"
            android:layout_width="154dp"
            android:layout_height="164dp"
            android:background="@drawable/fifteen_dp_rounded_rectangle"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.201">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="85dp"
                android:background="@drawable/americano"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.253"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.813"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cappuccino"
            android:layout_width="154dp"
            android:layout_height="164dp"
            android:background="@drawable/fifteen_dp_rounded_rectangle"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintTop_toTopOf="@id/americano">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="85dp"
                android:background="@drawable/cappuccino"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.253"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cappuccino"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.813"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mocha"
            android:layout_width="154dp"
            android:layout_height="164dp"
            android:background="@drawable/fifteen_dp_rounded_rectangle"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/americano"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.75">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="85dp"
                android:background="@drawable/mocha"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.253"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mocha"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.813"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flat_white"
            android:layout_width="154dp"
            android:layout_height="164dp"
            android:background="@drawable/fifteen_dp_rounded_rectangle"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/cappuccino"
            app:layout_constraintTop_toTopOf="@id/mocha"
            app:layout_constraintVertical_bias="0.75">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="85dp"
                android:background="@drawable/flat_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.253"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat White"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.813"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>