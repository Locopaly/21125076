<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText,SmallSp,ContentDescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Redeem"
        android:textColor="@color/darkblue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.072"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.208">

        <ImageView
            android:id="@+id/americano_redeem"
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:background="@drawable/americano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/americano_redeem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Americano"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/americano_redeem"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Valid until 04/08/2023"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/americano_redeem"
            app:layout_constraintTop_toBottomOf="@id/americano_redeem_text"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/americano_redeem_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/thirty_dp_rounded_rectangle"
            android:fontFamily="@font/poppins_medium"
            android:text="1340 pts"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/americano_redeem_text"
            app:layout_constraintTop_toTopOf="@id/americano_redeem_text"
            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/cappuccino_redeem"
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/cappuccino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/americano_redeem"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/cappuccino_redeem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Cappuccino"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/americano_redeem_text"
            app:layout_constraintTop_toTopOf="@id/cappuccino_redeem"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Valid until 04/08/2023"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/cappuccino_redeem_text"
            app:layout_constraintTop_toBottomOf="@id/cappuccino_redeem_text"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/cappuccino_redeem_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/thirty_dp_rounded_rectangle"
            android:fontFamily="@font/poppins_medium"
            android:text="1340 pts"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/americano_redeem_button"
            app:layout_constraintTop_toTopOf="@id/cappuccino_redeem_text"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/flat_white_redeem"
            android:layout_width="114dp"
            android:layout_height="85dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/flat_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cappuccino_redeem"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/flat_white_redeem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Flat White"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/americano_redeem_text"
            app:layout_constraintTop_toTopOf="@id/flat_white_redeem"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Valid until 04/08/2023"
            android:textColor="@color/grey"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/flat_white_redeem_text"
            app:layout_constraintTop_toBottomOf="@id/flat_white_redeem_text"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/flat_white_redeem_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/thirty_dp_rounded_rectangle"
            android:fontFamily="@font/poppins_medium"
            android:text="1340 pts"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/americano_redeem_button"
            app:layout_constraintTop_toTopOf="@id/flat_white_redeem_text"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>